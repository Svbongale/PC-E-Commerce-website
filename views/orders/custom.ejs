<%- include("../partials/header") %>

<div class="ui main text container segment" style="margin: 50px; padding-top: 100px;">
    <div class="ui huge header">Order Your Custom Product</div>
       <hr>
       <br>

    <form action="/order/custom" method="POST" class="ui form" enctype="multipart/form-data">
      <div class="field">
        <label>Product Name</label>
        <input type="text" name="name" placeholder="Enter the name for your product" required>
      </div> 
      <div class="field">
        <label>Product weight</label>
        <input type="text" name="weight" placeholder="Enter the approximate weight" required>
      </div> 

      <div class="field">
        <label>Product type</label>
        <input type="text" name="type" placeholder="Enter the type of product" required>
      </div> 

      <div class="field">
        <label>Product Image</label>
        <input type="file" name="image" placeholder="Upload the image of the product" required>
      </div> 


      <div class="field">
        <label>Catogory</label>
        <input type="text" name="catogory" placeholder="Enter the catogory" required>
      </div> 

      <div class="field">
          <label>First Name</label>
          <input type="text" name="custName" placeholder="Name" required>
        </div>
        <div class="field">
          <label>Contact Number</label>
          <input type="number" name="PhNo" placeholder="Phone Number" required>
        </div>
        <div class="field">
            <label>Email ID</label>
            <input type="email" name="email" placeholder="Email ID">
        </div>
        <div class="field">
          <div class="ui checkbox">
            <input type="checkbox" tabindex="0" required>
            <label>I agree to the Terms and Conditions</label>
          </div>
          <label>Note: You'll get a call from us after providing your details for pricing.</label>
        </div>
        <button class="ui button" type="submit">Submit Order!</button>
    </form>
</div>

<%- include("../partials/footer") %>



