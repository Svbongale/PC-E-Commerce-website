<%- include("../partials/header") %>

<div class="ui main text container segment" style="margin: 50px; padding-top: 100px;">
    <div class="ui huge header">Add New Product To Catalogue</div>
    <form action="/catalogue" method="POST" class="ui form" enctype="multipart/form-data">
        <div class="field"><label>Name</label> <input type="text" name="name" placeholder="Title" required> </div>
        <div class="field"><label>Image</label><input type="file" name="image" placeholder="Image" required>  </div>
        <div class="field"><label>Type</label><input type="text" name="type" placeholder="Type of product" required>  </div>
        <div class="field"><label>Price</label><input type="text" name="price" placeholder="Price of Product" required>  </div>
        <div class="field"><label>Storage</label><input type="text" name="weight" placeholder="Weight of Product" required> </div>
        <div class="field"><label>Catogory</label><input type="text" name="catogory" placeholder="Catogory" required> </div>
        <button type="submit" class="ui teal button">Add to Catalogue!</button>     
    </form>
</div>

